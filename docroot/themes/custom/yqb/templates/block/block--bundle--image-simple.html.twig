{#
/**
 * @file
 * Theme override to display a block.
 */
#}

<div{{ attributes }} class="block-image">
    {% if label %}
        {{ label }}
    {% endif %}

    {% block content %}
        {% if content.field_title_image[0] %}
            <h2>{{ content.field_title_image }}</h2>
        {% endif %}
      
        {% if content.field_display_tag %}

            {{ content.field_image }}

        {% else %}

            <div class="block-image-content" style="background-image:url({{ file_url(content.field_image['#items'].entity.uri.value) }});" data-file="{{ file_url(content.field_image['#items'].entity.uri.value) }}"></div>

        {% endif %}
    {% endblock %}
</div>
