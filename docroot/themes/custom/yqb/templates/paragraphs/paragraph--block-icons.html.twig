{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    'block-child block-icons text-center'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.field_icons[0] %}
        <div class="wrapper-block-icons">
            {% for key, icon in content.field_icons if key|first != '#' %}
                <div class="icon-item">
                    {{ icon }}
                </div>
            {% endfor %}
        </div>
    {% endif %}
  </div>
{% endblock paragraph %}