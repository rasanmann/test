{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    'block-child block-half'
  ]
%}

{# content.field_color_2.0 #}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }} style="color: {{content.field_color_1.0 ? content.field_color_1.0 : '#012d8b'}}" data-secondary="{{content.field_color_2.0 ? content.field_color_2.0 : '#b2daf3'}}">
      <div class="wrapper-block-half">
        <div class="container-half">
          {{ content.field_left_column }}
        </div>
        <div class="container-half">
           {{content.field_right_column}}
        </div>
      </div>
  </div>
{% endblock paragraph %}
