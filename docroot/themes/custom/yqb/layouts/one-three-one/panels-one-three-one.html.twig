{#
/**
 * @file
 * Template for a 1-3-1 row panel layout.
 */
#}
<div class="panels-one-three-one">

    {% if content['top.full'] %}
        <div class="top">
            {{ content['top.full'] }}
        </div>
    {% endif %}

    {% if content['top.one.two.top'] or content['top.one.two.left'] or content['top.one.two.right'] %}
        <div class="row second">
            {% if content['top.one.two.top'] %}
                <div class="col-sm-12">
                    {{ content['top.one.two.top'] }}
                </div>
            {% endif %}

            {% if content['top.one.two.left'] %}
                <div class="col-md-8 col-sm-6">
                    {{ content['top.one.two.left'] }}
                </div>
            {% endif %}

            {% if content['top.one.two.right'] %}
                <div class="col-md-4 col-sm-6">
                    {{ content['top.one.two.right'] }}
                </div>
            {% endif %}
        </div>
    {% endif %}

    {% if content['middle.mixed.left'] or content['middle.mixed.center'] or content['middle.mixed.right'] %}
        <div class="row block-bordered">
            {% if content['middle.mixed.left'] %}
                <div class="col-lg-3">
                    {{ content['middle.mixed.left'] }}
                </div>
            {% endif %}

            {% if content['middle.mixed.center'] %}
                <div class="col-lg-4 col-sm-6">
                    {{ content['middle.mixed.center'] }}
                </div>
            {% endif %}

            {% if content['middle.mixed.right'] %}
                <div class="col-lg-5 col-sm-6">
                    {{ content['middle.mixed.right'] }}
                </div>
            {% endif %}
        </div>
    {% endif %}

    {% if content['middle.equal.left'] or content['middle.equal.center'] or content['middle.equal.right'] %}
        <div class="row row-eq-height block-parks">
            {% if content['middle.equal.left'] %}
                <div class="col-sm-4">
                    {{ content['middle.equal.left'] }}
                </div>
            {% endif %}

            {% if content['middle.equal.center'] %}
                <div class="col-sm-4">
                    {{ content['middle.equal.center'] }}
                </div>
            {% endif %}

            {% if content['middle.equal.right'] %}
                <div class="col-sm-4">
                    {{ content['middle.equal.right'] }}
                </div>
            {% endif %}
        </div>
    {% endif %}

    {% if content['middle.bottom.left'] or content['middle.bottom.center'] or content['middle.bottom.right'] %}
        <div class="row row-eq-height block-electric-car">
            {% if content['middle.bottom.left'] %}
                <div class="col-sm-4">
                    {{ content['middle.bottom.left'] }}
                </div>
            {% endif %}

            {% if content['middle.bottom.center'] %}
                <div class="col-sm-4">
                    {{ content['middle.bottom.center'] }}
                </div>
            {% endif %}

            {% if content['middle.bottom.right'] %}
                <div class="col-sm-4">
                    {{ content['middle.bottom.right'] }}
                </div>
            {% endif %}
        </div>
    {% endif %}

    {% if content['bottom.full'] %}
        <div class="bottom">
            {{ content['bottom.full'] }}
        </div>
    {% endif %}

</div>
