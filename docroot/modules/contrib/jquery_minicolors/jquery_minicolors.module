<?php

/**
 * @file
 * Contains jquery_minicolors.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function jquery_minicolors_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the jquery_minicolors module.
    case 'help.page.jquery_minicolors':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provide a text field widget for using jQuery 
      MiniColors library. You can use the jQuery minicolors widget with any
       Text (plain) field type') . '</p>';
      return $output;

    default:
  }
}
